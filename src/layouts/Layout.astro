---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'OSRTOS - Top Open Source Real-Time Operating Systems (RTOS)',
  description = 'List of open source real-time operating systems. Dive deep into features, comparisons, and use-cases to choose the perfect real-time operating system for your project. Stay updated with the latest in the RTOS world.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link rel="icon" type="image/png" href="/favicon.png"/>
  <meta name="description" content={description}/>
  <title>{title}</title>
  <link rel="sitemap" href="/sitemap-index.xml" />

  <!-- Initialize theme before render to prevent flash -->
  <script is:inline>
    const theme = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        return localStorage.getItem('theme');
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'light';
    })();

    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }

    window.localStorage.setItem('theme', theme);
  </script>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-19HMY2DH6K"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-19HMY2DH6K');
  </script>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors">
<header class="bg-gray-800 dark:bg-gray-900 text-white shadow-md sticky top-0 z-50 w-full">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 py-3 sm:py-4">
    <div class="flex flex-wrap justify-between items-center gap-4">
      <div class="nav-brand">
        <a href="/" class="text-white no-underline text-xl sm:text-2xl font-bold hover:text-gray-200 transition-colors">
          OSRTOS
        </a>
      </div>
      <div class="flex items-center gap-3 sm:gap-8">
        <div class="flex flex-wrap gap-2 sm:gap-4 md:gap-8">
          <a href="/" class="hidden sm:inline text-white no-underline text-sm sm:text-base font-medium hover:text-secondary-400 transition-colors">
            Home
          </a>
          <a href="/rtos/" class="text-white no-underline text-sm sm:text-base font-medium hover:text-secondary-400 transition-colors">
            RTOS
          </a>
          <a href="/library/" class="text-white no-underline text-sm sm:text-base font-medium hover:text-secondary-400 transition-colors">
            Libraries
          </a>
          <a href="/projects/" class="text-white no-underline text-sm sm:text-base font-medium hover:text-secondary-400 transition-colors">
            Projects
          </a>
          <a href="/learn/" class="text-white no-underline text-sm sm:text-base font-medium hover:text-secondary-400 transition-colors">
            Learn
          </a>
          <a
             href="https://github.com/yplam/osrtos"
             target="_blank"
             rel="noopener noreferrer"
             class="hidden sm:flex items-center gap-1 sm:gap-2 bg-secondary-600 hover:bg-secondary-700 text-white no-underline text-sm sm:text-base font-medium px-2 rounded-md transition-colors"
          >
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            <span class="hidden sm:inline">GitHub</span>
          </a>
        </div>
        <ThemeToggle/>
      </div>
    </div>
  </nav>
</header>

<main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-12 w-full">
  <slot/>
</main>

<footer class="bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 py-6 sm:py-8 mt-12 sm:mt-16 w-full">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <p class="m-0 text-center text-gray-500 dark:text-gray-400 text-sm">
      &copy; {new Date().getFullYear()} OSRTOS
    </p>
  </div>
