---
import type {CollectionEntry} from 'astro:content';

interface Props {
  entry: CollectionEntry<'projects'>;
}

const {entry} = Astro.props;
const {title, summary, isShow, rtos, image, codeUrl, siteUrl} = entry.data;

// Only show link if isShow is true
const href = isShow ? `/projects/${entry.id}/` : (siteUrl ? siteUrl : codeUrl);
---

<article
   class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden transition-all bg-white dark:bg-gray-800 h-full flex flex-col hover:border-accent-500 dark:hover:border-accent-400 hover:shadow-lg hover:shadow-accent-500/10 dark:hover:shadow-accent-400/20 hover:-translate-y-0.5">

  <a href={href} class="no-underline text-inherit flex flex-col h-full">
    {image &&
       <img src={image} alt={title} class="w-full h-48 object-cover border-b border-gray-200 dark:border-gray-700"/>}
    <div class="p-6 flex flex-col flex-grow">
      <h3 class="m-0 mb-3 text-xl font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
      <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-4 grow line-clamp-2 min-h-11">{summary}</p>
      <div class="flex justify-between items-center mt-auto">
           <span
              class="bg-secondary-100 dark:bg-secondary-900/30 text-secondary-800 dark:text-secondary-400 py-1 rounded-full text-xs font-semibold uppercase">{rtos}</span>
        <div class="flex gap-2">
          {codeUrl && (
             <a href={codeUrl}
                class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors"
                title="Source Code" onclick="event.stopPropagation()">
               <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 16 16">
                 <path
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
               </svg>
             </a>
          )}
          {siteUrl && (
             <a href={siteUrl}
                class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors"
                title="Website" onclick="event.stopPropagation()">
               <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                       d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
               </svg>
             </a>
          )}
        </div>
      </div>
    </div>
  </a>
</article>
