---
import type {CollectionEntry} from 'astro:content';
import LibraryCard from './LibraryCard.astro';

interface Props {
  libraries: CollectionEntry<'libraries'>[];
  showFilters?: boolean;
}

const {libraries, showFilters = false} = Astro.props;

// Extract unique licenses for filters
const allLicenses = new Set<string>();

libraries.forEach(entry => {
  entry.data.licenses.forEach(license => allLicenses.add(license));
});

const licenses = Array.from(allLicenses).sort();
---

<div class="w-full">
  {showFilters && (
     <div class="mb-8 p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
       <div class="mb-4 flex justify-between items-center">
         <h2 class="text-lg font-semibold m-0 text-gray-800 dark:text-gray-100">Filters</h2>
         <button
           id="clear-filters"
           class="px-4 py-2 text-sm bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
         >
           Clear All
         </button>
       </div>

       <div class="grid grid-cols-1 gap-6">
         <!-- License Filter -->
         <div>
           <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">
             License
           </label>
           <select
             id="license-filter"
             class="w-full px-3 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
           >
             <option value="">All Licenses</option>
             {licenses.map(license => (
               <option value={license}>{license}</option>
             ))}
           </select>
         </div>
       </div>

       <div class="mt-4">
         <p id="library-count" class="m-0 text-gray-600 dark:text-gray-400 text-sm">Showing {libraries.length} libraries</p>
       </div>
     </div>
  )}

  <div id="library-grid" class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    {libraries.map(entry => (
       <div
         class="library-item"
         data-licenses={JSON.stringify(entry.data.licenses)}
       >
         <LibraryCard entry={entry}/>
       </div>
    ))}
  </div>

  <div id="no-results" class="hidden text-center py-16 px-8 text-gray-600 dark:text-gray-400">
    <p class="text-lg m-0">No libraries found matching the selected filters.</p>
  </div>
</div>

{showFilters && (
  <script>
    function applyFilters() {
      const licenseFilter = (document.getElementById('license-filter') as HTMLSelectElement)?.value || '';

      const libraryItems = document.querySelectorAll('.library-item');
      let visibleCount = 0;

      libraryItems.forEach(item => {
        const licenses = JSON.parse(item.getAttribute('data-licenses') || '[]');

        const matchesLicense = !licenseFilter || licenses.includes(licenseFilter);

        const isVisible = matchesLicense;

        if (isVisible) {
          (item as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });

      // Update count
      const countElement = document.getElementById('library-count');
      if (countElement) {
        countElement.textContent = `Showing ${visibleCount} libraries`;
      }

      // Show/hide no results message
      const noResults = document.getElementById('no-results');
      if (noResults) {
        if (visibleCount === 0) {
          noResults.classList.remove('hidden');
        } else {
          noResults.classList.add('hidden');
        }
      }
    }

    // Attach event listeners
    const licenseFilter = document.getElementById('license-filter');
    const clearButton = document.getElementById('clear-filters');

    licenseFilter?.addEventListener('change', applyFilters);

    clearButton?.addEventListener('click', () => {
      (document.getElementById('license-filter') as HTMLSelectElement).value = '';
      applyFilters();
    });
  </script>
)}
