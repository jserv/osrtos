---
interface Props {
  star: number;
  lastUpdated: Date;
  version?: string;
  components: string[];
  licenses: string[];
  platforms: string[];
  codeUrl?: string;
  siteUrl?: string;
}

const {
  star,
  lastUpdated,
  version,
  components,
  licenses,
  platforms,
  codeUrl,
  siteUrl
} = Astro.props;
---

<aside
   class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 mt-0 lg:sticky lg:top-18">
  <div class="mb-6">
    <dl class="m-0 grid grid-cols-[auto_1fr] gap-x-4 gap-y-3">
      <dt class="font-semibold text-gray-500 dark:text-gray-400 text-sm">GitHub Stars</dt>
      <dd class="m-0 text-gray-900 dark:text-gray-100 text-sm font-semibold text-warning-500">
        ‚≠ê {star.toLocaleString()}</dd>

      <dt class="font-semibold text-gray-500 dark:text-gray-400 text-sm">Last Updated</dt>
      <dd class="m-0 text-gray-900 dark:text-gray-100 text-sm">{lastUpdated.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}</dd>

      {version && (
         <>
           <dt class="font-semibold text-gray-500 dark:text-gray-400 text-sm">Version</dt>
           <dd class="m-0 text-gray-900 dark:text-gray-100 text-sm"><code
              class="bg-gray-200 dark:bg-gray-700 px-2 py-0.5 rounded text-xs font-mono">{version}</code></dd>
         </>
      )}

      {licenses.length > 0 && (
         <>
           <dt class="font-semibold text-gray-500 dark:text-gray-400 text-sm">License</dt>
           <dd class="m-0">
             <ul class="list-none p-0 m-0">
               {licenses.map(l =>
                  <li
                     class="bg-accent-100 dark:bg-accent-900/30 text-accent-800 dark:text-accent-300 px-0 py-0.5 rounded text-xs font-medium">{l}</li>)}
             </ul>
           </dd>
         </>
      )}
    </dl>
  </div>
  <div class="mb-6">
    <div class="flex flex-wrap gap-2">
      {codeUrl && (
         <a href={codeUrl}
            class="inline-flex items-center gap-1.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:border-primary-500 dark:hover:border-primary-500 text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 no-underline px-3 py-1.5 rounded text-xs font-medium transition-colors"
            target="_blank" rel="noopener noreferrer">
           <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 16 16">
             <path
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
           </svg>
           Code
         </a>
      )}
      {siteUrl && (
         <a href={siteUrl}
            class="inline-flex items-center gap-1.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:border-primary-500 dark:hover:border-primary-500 text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 no-underline px-3 py-1.5 rounded text-xs font-medium transition-colors"
            target="_blank" rel="noopener noreferrer">
           <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                   d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
           </svg>
           Website
         </a>
      )}
    </div>
  </div>

  {platforms.length > 0 && (
     <div class="mb-6">
       <h3
          class="m-0 mb-4 text-base font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-gray-200 dark:border-gray-600 pb-2">
         Platforms</h3>
       <ul class="list-none p-0 m-0 flex flex-wrap gap-2">
         {platforms.map(p =>
            <li
               class="bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300 px-3 py-1.5 rounded-md text-xs font-medium">{p}</li>)}
       </ul>
     </div>
  )}

  {components.length > 0 && (
     <div class="mb-6">
       <h3
          class="m-0 mb-4 text-base font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-gray-200 dark:border-gray-600 pb-2">
         Components</h3>
       <ul class="list-none p-0 m-0 flex flex-wrap gap-2">
         {components.map(c =>
            <li
               class="bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300 px-3 py-1.5 rounded-md text-xs font-medium">{c}</li>)}
       </ul>
     </div>
  )}

</aside>
