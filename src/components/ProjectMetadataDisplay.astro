---
import type {CollectionEntry} from 'astro:content';

interface Props {
  codeUrl?: string;
  siteUrl?: string;
  rtosEntry?: CollectionEntry<'rtos'>;
}

const {
  codeUrl,
  siteUrl,
  rtosEntry
} = Astro.props;
---

<aside
   class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 mt-0 lg:sticky lg:top-18">
  <div class="mb-6">
    <div class="flex flex-wrap gap-2">
      {codeUrl && (
         <a href={codeUrl}
            class="inline-flex items-center gap-1.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:border-primary-500 dark:hover:border-primary-500 text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 no-underline px-3 py-2 rounded text-sm font-medium transition-colors"
            target="_blank" rel="noopener noreferrer">
           <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
             <path
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
           </svg>
           Code
         </a>
      )}
      {siteUrl && (
         <a href={siteUrl}
            class="inline-flex items-center gap-1.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:border-primary-500 dark:hover:border-primary-500 text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 no-underline px-3 py-2 rounded text-sm font-medium transition-colors"
            target="_blank" rel="noopener noreferrer">
           <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                   d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
           </svg>
           Website
         </a>
      )}
    </div>
  </div>

  {rtosEntry && (
     <div class="mb-0">
       <h3
          class="m-0 mb-4 text-base font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-gray-200 dark:border-gray-600 pb-2">
         Built With
       </h3>
       <a href={`/rtos/${rtosEntry.data.slug}`}
          class="block bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:border-primary-500 dark:hover:border-primary-500 rounded-lg p-4 no-underline transition-all hover:shadow-md group">
         <div class="flex items-start justify-between gap-2 mb-2">
           <h4
              class="text-base font-bold text-gray-900 dark:text-gray-100 m-0 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
             {rtosEntry.data.title}
           </h4>
           <span class="text-warning-500 text-xs font-semibold whitespace-nowrap">
             ‚≠ê {rtosEntry.data.star.toLocaleString()}
           </span>
         </div>
         <p class="text-sm text-gray-600 dark:text-gray-400 m-0 mb-3 line-clamp-2">
           {rtosEntry.data.summary}
         </p>
         {rtosEntry.data.version && (
            <div class="flex items-center gap-2 mb-2">
              <span class="text-xs text-gray-500 dark:text-gray-400">Version:</span>
              <code
                 class="bg-gray-200 dark:bg-gray-600 px-2 py-0.5 rounded text-xs font-mono text-gray-700 dark:text-gray-300">
                {rtosEntry.data.version}
              </code>
            </div>
         )}
         <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-200 dark:border-gray-600">
           <span class="text-xs text-gray-500 dark:text-gray-400">
             View RTOS Details
           </span>
           <svg class="w-4 h-4 text-primary-500 group-hover:translate-x-1 transition-transform" fill="none"
                stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
           </svg>
         </div>
       </a>
     </div>
  )}
</aside>
